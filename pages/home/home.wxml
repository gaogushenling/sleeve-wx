<view>
    <!--主题图片-->
    <image class="top-theme" src="{{themeA.entrance_img}}"/>

    <!--banner-->
    <swiper class="swiper" indicator-dots autoplay indicator-active-color="#157658" circular>
        <block wx:for="{{bannerB.items}}" wx:key="id">
            <swiper-item>
                <image class="swiper" src="{{item.img}}"/>
            </swiper-item>
        </block>
