<view class="container">
    <image class="title" src="{{theme.title_img}}"></image>
    <scroll-view wx:for="{{spuList}}" wx:key="id">
        <block>
            <view>
                <image src="{{item.img}}"/>
                <l-price autofix value="{{item.price}}" l-unit-class="price-unit"
                         l-value-class="price-value"></l-price>
                <text>{{item.title}}</text>
            </view>
        </block>
    </scroll-view>
</view>
