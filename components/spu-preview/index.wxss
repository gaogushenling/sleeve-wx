.container {
    width: 340rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 0 0 8px 0 rgba(119, 163, 149, 0.2);
    margin-bottom: 30rpx;
    background-color: #ffffff;
}

.img {
    width: 100%;
    height: 360rpx;
}

.content-container {
    display: flex;
    flex-direction: column;
    padding: 16rpx 16rpx 22rpx 16rpx;
}

.tags {
    display: flex;
    flex-direction: row;
    margin-bottom: 8rpx;
    margin-top: 6rpx;
    /*flex 换行*/
    flex-wrap: wrap;
}

.tag {
    background-color: #DCEBE6 !important;
    color: #157658 !important;
    margin-right: 10rpx !important;
    height: 36rpx !important;
    padding-left: 6rpx !important;
    padding-right: 6rpx !important;
}

.title {
    font-size: 28rpx;
    color: #333333;
}

.price-row {
    display: flex;
    flex-direction: row;
}

.discount-price {
    margin-left: 10rpx;
}

.subtitle {
    font-size: 24rpx;
    font-weight: 300;
    margin-top: 6rpx;
    color: #888888;
}
